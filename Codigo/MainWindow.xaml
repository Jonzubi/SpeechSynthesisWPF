<Window x:Class="SpeechSynthesisWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechSynthesisWPF"
        mc:Ignorable="d"
        Title="Speech Synthesizer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtSpeach" Margin="10,10,10,71" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button x:Name="btnSpeak" Content="Speak" Margin="10,0,10,10" Click="btnSpeak_Click" Height="25" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="cmbVoices" VerticalAlignment="Bottom" Margin="10,0,10,40" Height="26"/>
    </Grid>
</Window>
